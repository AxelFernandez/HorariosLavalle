<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sistemas51.horarioslavalle.Fragment40">



    <TextView
        android:id="@+id/textView240"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Punto de Partida"
        android:layout_marginLeft="17dp"
        />

    <Spinner
        android:id="@+id/spinnerorigen40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView240"
        android:clickable="true"
        android:layout_marginLeft="17dp"
        />
    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punto de Llegada"
        android:layout_below="@id/spinnerorigen40"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="17dp"
        />



    <Spinner
        android:id="@+id/spinnerllegada40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView40"
        android:layout_marginLeft="17dp"
        />




    <Button
        android:id="@+id/button40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="Consultar Horarios" />
</RelativeLayout>
