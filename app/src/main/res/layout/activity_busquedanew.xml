<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        />


    <in.galaxyofandroid.awesometablayout.AwesomeTabBar
        android:id="@+id/tabBarbusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
app:atb_noImage="true"
        app:atb_imageHeight="30dp"
        app:atb_textSize="14dp"
        app:atb_imageWidth="30dp"
        app:atb_indicatorColor="#bebebe"
        app:atb_indicatorHeight="2dp"></in.galaxyofandroid.awesometablayout.AwesomeTabBar>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagers"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
       />

</LinearLayout>
