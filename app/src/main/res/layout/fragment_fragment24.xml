<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sistemas51.horarioslavalle.Ruta24.Fragment24">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=""
        android:textSize="20dp"
        android:layout_marginLeft="17dp"

        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:layout_marginLeft="17dp"
        android:text="Punto de Partida" />

    <Spinner
        android:id="@+id/spinnerorigen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:clickable="true"
        android:layout_marginLeft="17dp"

        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punto de Llegada"
        android:layout_below="@id/spinnerorigen"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="17dp"

        />



    <Spinner
        android:id="@+id/spinnerllegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="17dp"
        />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/especial"
    android:text="Horarios Lagunas del Rosario"
    android:layout_above="@+id/button"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="32dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="Consultar Horarios de Verano" />


</RelativeLayout>
